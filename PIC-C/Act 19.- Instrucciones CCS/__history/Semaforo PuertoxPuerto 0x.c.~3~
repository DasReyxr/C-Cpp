#byte Tris_D = 0x0F95 // Tris_D es equivalente a la dirección de RAM 0F95
//--Var--


//--Inicio--
void main(){
   Tris_D = 0x00;//  Set TRISD as OUTPUT
   Port_D = 0X00; // Leds OFF 
   
   while(true){            
   Port_D = 0x91; //91H->1001 0001
   delay_ms(500);
   
   Port_D = 0x81; //81H->0100 0001
   delay_ms(200);
   
   Port_D = 0x21; //21H->0010 0001
   delay_ms(500);
   
   Port_D = 0x19; //19H->0001 1001
   delay_ms(500);
   
   Port_D = 0x18; //18H->0001 0100
   delay_ms(500);
   Port_D = 0x12; //12H->0001 0010
   }
}



