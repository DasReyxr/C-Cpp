//----------- MAIN LIBRARY ----------
      #INCLUDE <18f4550.h> 
//------- FUSES CONFIGURATION -------
//#fuses XTPLL,MCLR,NOWDT,NOPROTECT,NOLVP,NODEBUG,USBDIV,PLL1,CPUDIV1,NOVREGEN
#fuses NOWDT,HS,PUT,NOPROTECT,NOBROWNOUT,NOMCLR,NOLVP,NOCPD
#use delay(clock=4000000)

//---------- EXT LIBRARIES -----------


//----------- SET OUTPUTS -----------
//--Ports-
#byte Port_D = 0X0F83 // Port_D it's equal as 0F83 RAM's Direction
#byte Tris_D = 0x0F95 // Tris_D it's equal as 0F95 RAM's Direction

#byte Port_B = 0x0F81 // Tris_B it's equal as 0F81 RAM's Direction
#byte Tris_B = 0x0F93 // Tris_B it's equal as 0F93 RAM's Direction
//--Var--
int8 unit,button;

//--Inicio--
void main(){
   //Set initial Values
   Tris_D = 0x00;//  Set TRISD as OUTPUT
   Tris_B = 0xFF;//  Set TRISB as INPUT
   unit = 0x00;
   
   while(true){
   if (bit_test(Port_B,0) == 1){
   if (unit<9){
   Port_D=unit;
   delay_ms(1000);
   unit++;
   }//end if unit max
   else{
   Port_D=0x00;
   }//end else unit min
   }
   else 
   Port_D=unit;
}//end while
}//end main



