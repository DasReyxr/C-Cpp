//----------- MAIN LIBRARY ----------
      #include <18F4550.h> 
//------- FUSES CONFIGURATION -------
#fuses NOWDT,HS,PUT,NOPROTECT,NOBROWNOUT,NOLVP,NOCPD
#use delay(clock=4MHz)

//---------- EXT LIBRARIES -----------
#include <lcd.c>
//----------- SET OUTPUTS -----------
//--Ports-
//--Ports-
#byte Port_B = 0X0F81 
#byte Tris_B = 0x0F93 
//--Var--
char nombres[9][11]={0,"t1","t2","t3","t4","t5","t6","t7","t8"};
//--Inicio--

void main(){
         //Set Outputs
         Tris_B = 0xFF;//  Set TRISB as OUTPUT
         Port_B = 0X00; // Leds OFF 
         lcd_init();
         printf(lcd_putc,"Nombres");
         
         while(true){
         
         while(Bit_test(Port_B,0)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[1]);
            while(bit_test(Port_B,0)==1){
            }
            delay_ms(1);
         }
         while(Bit_test(Port_B,1)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[2]);
            while(bit_test(Port_B,1)==1){
            }
            delay_ms(1);
         }
         while(Bit_test(Port_B,2)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[3]); 
            while(bit_test(Port_B,2)==1){
            }
            delay_ms(1);
         }
         while(Bit_test(Port_B,3)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[4]);
            while(bit_test(Port_B,3)==1){
            }
            delay_ms(1);
         }
         while(Bit_test(Port_B,4)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[5]);
            while(bit_test(Port_B,4)==1){
            }
            delay_ms(1);
         }
         while(Bit_test(Port_B,5)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[6]);
            while(bit_test(Port_B,5)==1){
            }
            delay_ms(1);
          }
         while(Bit_test(Port_B,6)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[7]);
            while(bit_test(Port_B,6)==1){
            }
            delay_ms(1);
          }
         while(Bit_test(Port_B,7)==1){
            printf(lcd_putc,"\f");
            printf(lcd_putc,nombres[8]);
            while(bit_test(Port_B,7)==1){
            }
            delay_ms(1);
          }
         }//end while
         
}//end main
  
   
